{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "standard",
    "plugin:vue/base",
    "plugin:vue/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "legacyDecorators": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module",
    "parser": "babel-eslint",
    "variable-name": [
      true,
      "allow-leading-underscore"
    ]
  },
  "plugins": [
    "vue",
    "typescript",
    "json"
  ],
  "rules": {
    "indent": [
      "error",
      4
    ]
  }
}
